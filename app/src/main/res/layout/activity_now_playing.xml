<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicalstructureapp.NowPlaying"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/descriptionTextView"
            android:text="Now Playing Activity \nThis Acticity opens up when the user pushes the Play button or any of the albums or playlists."/>

        <ImageView
            style="@style/albumArt"/>

        <TextView
            style="@style/artistTextView"
            android:layout_marginStart="@dimen/view_margin"/>

        <TextView
            style="@style/albumtTextView"
            android:layout_marginStart="@dimen/view_margin"/>
        <TextView
            style="@style/songTextView"
            android:layout_marginStart="@dimen/view_margin"/>

        <SeekBar
            style="@style/seekBar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginEnd="@dimen/view_margin">

            <ImageButton
                style="@style/imageButton"
                android:src="@drawable/ic_thumb_up"/>

            <ImageButton
                style="@style/imageButton"
                android:src="@drawable/ic_navigate_before"/>

            <ImageButton
                style="@style/imageButton"
                android:src="@drawable/ic_play_arrow"/>

            <ImageButton
                style="@style/imageButton"
                android:src="@drawable/ic_navigate_next"/>

            <ImageButton
                style="@style/imageButton"
                android:src="@drawable/ic_thumb_down"/>

        </LinearLayout>

    </LinearLayout>




</ScrollView>
