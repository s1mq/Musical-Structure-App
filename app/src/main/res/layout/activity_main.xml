<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context="com.example.android.musicalstructureapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/descriptionTextView"
            android:text="@string/main_activity_description" />

        <LinearLayout
            style="@style/logoLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    style="@style/logoText"
                    android:text="@string/title_1_of_1" />

                <TextView
                    style="@style/logoTextTwo"
                    android:layout_marginTop="16dp"
                    android:text="@string/title_1_of_2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    style="@style/logoText"
                    android:text="@string/title_2_of_1" />

                <TextView
                    style="@style/logoTextTwo"
                    android:layout_marginBottom="16dp"
                    android:text="@string/title_2_of_2" />
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/play"
            style="@style/mainButtons"
            android:drawableStart="@drawable/play_big_3"
            android:text="@string/play_button" />

        <Button
            android:id="@+id/playlists"
            style="@style/mainButtons"
            android:drawableStart="@drawable/playlist_button"
            android:text="@string/playlists_button" />

        <Button
            android:id="@+id/discover"
            style="@style/mainButtons"
            android:drawableStart="@drawable/discover_button"
            android:text="@string/discover_button" />
    </LinearLayout>
</ScrollView>
